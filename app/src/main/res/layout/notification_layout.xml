<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/info_boder"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/asmita_info"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/noti_date"
                android:layout_gravity="left|center"
                android:layout_weight="1"
                android:text="Event"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#f8c60a"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/noti_event_name"
                android:text="Date"
                android:fontFamily="@font/inconsolata_semibold"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_gravity="right|center_vertical"
                android:textStyle="bold"
                android:gravity="right"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:text="Please Wait while we are getting latest updates... \n - Jay Asmita"
            android:textSize="20sp"
            android:id="@+id/noti_info"
            android:textStyle="bold"
            android:textColor="#f5f5f5"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/inconsolata_semibold"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>