<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#313130"
    tools:context=".Fragment.ResultsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="top"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="Fixtures are not uploaded yet...."
                android:textSize="30sp"
                android:id="@+id/default_fixtures_tv"
                android:textColor="#FFFFF2"
                android:fontFamily="@font/inconsolata_semibold"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/asmita_info"
                android:id="@+id/default_fixtures_iv"
                android:foregroundGravity="center"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/fixtures"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_below="@id/fixtures"
                android:id="@+id/get_fixtures"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:background="@drawable/info_boder"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/asmita_info"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Download Fixtures"
                    android:textSize="25sp"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textColor="#3366BB"
                    android:fontFamily="@font/info_light"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>