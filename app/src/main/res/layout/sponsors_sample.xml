<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/info_boder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="9dp"
        android:background="#313130"
        android:layout_marginRight="10dp"
         app:cardCornerRadius="5dp"
        app:cardMaxElevation="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/SponsorImage"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                app:srcCompat="@drawable/asmita_new" />

            <TextView
                android:id="@+id/SponsorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sponsors Name "
                android:textColor="#FFFFF2"
                android:layout_gravity="center"
                android:fontFamily="@font/info_bold"
                android:textSize="24sp"
                android:textStyle="bold|italic"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>