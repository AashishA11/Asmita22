<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.InfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll1"
            android:background="@drawable/info_boder"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tittle_info"
                android:text="Event"
                android:gravity="center"
                android:fontFamily="@font/inconsolata_semibold"
                android:textColor="#f8c60a"
                android:textSize="30sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:layout_centerInParent="true"
                    android:alpha="0.3"
                    android:foregroundGravity="fill"
                    android:src="@drawable/asmita_info" />
                <TextView
                    android:id="@+id/info_TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Please Wait we are getting latest info....."
                    android:textColor="#FFFFF2"
                    android:fontFamily="@font/inconsolata_semibold"
                    android:textSize="20sp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shaape_info"
                android:orientation="horizontal"
                android:padding="7dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Follow us on :"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginLeft="10dp"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/iv_insta"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/instagram" />

                <ImageView
                    android:id="@+id/iv_facebook"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/facebook" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>