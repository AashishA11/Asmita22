<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="5dp"
    android:background="#313130"
    android:orientation="horizontal">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="60dp"
            android:id="@+id/team_img"
            android:layout_weight="0"
            android:background="#313130"
            android:src="@drawable/asmita_new"
            android:foregroundGravity="fill"
            android:layout_gravity="fill"
            app:civ_border_color="#313130"
            app:civ_border_width="0sp"
            android:scaleType="centerCrop"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/team_name"
                android:text="Dr. X Y Z"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/team_position"
                android:text="Positon XYZ"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_gravity="right"
            android:layout_weight="0"
            android:id="@+id/team_mail"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_mail_foreground"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
</LinearLayout>